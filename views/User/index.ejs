                    <div class="featured__item__pic set-bg" data-setbg="/uploads/resturantimg/<%=data[i].pro_image%> " style="border-radius: 20px; box-shadow: 6px -4px 5px 3px rgba(0, 0, 0, 0.14);">
                    </div>
                    <div class="featured__item__text">
                        <p style="margin-bottom: 10px;"><a href="/users/Detail_promotion/<%=data[i].id_pro%>" style=" color: black;"><%= data[i].pro_name %></a></p>
                        <h5><%= parseFloat(data[i].pro_price).toFixed(2) %> แต้ม</h5>
                    </div>
                </div>
            </div>
            <% } %>
            <% } %>
            <% if(!data.length) { %>
                <p class="text-center">No Promotion found!</p>
