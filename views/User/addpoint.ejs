                <option value="ธนาคารกรุงศรีอยุธยา">ธนาคารกรุงศรีอยุธยา</option>
              </select>
            </div>
            
            <div class="mt-3 " style="margin-left: 105px;">
              <label class="ml-5">แนบหลักฐานการโอน : </label>
              <br>
              <input type="file"  name="point" style="width: 300px;" class="ml-5 form-control form-control-sm">
            </div>
            
            <br>
          </div>
          <center><button type="submit" class="btn btn-danger my-5" style=" width: 50%; height: 50px;"><b>ยืนยันการเติมแต้ม</b></button></center>
