              box-shadow: 5px 5px 8px 6px rgba(0, 0, 0, 0.13);">
        <form action="/users/addpoint" method="POST" enctype="multipart/form-data">
         
      <!--เติมpoint-->
          
              <center><input type="text" class="form-control col-9 mb-3" style="width: 100%;" placeholder="ชื่อจริง" value="<%= name %>" readonly></center>
              <center><input type="text" class="form-control col-9" style="width: 100%;" placeholder="อีเมล์" value="<%= email %>" readonly></center>
            <div class="mt-4" style="margin-left: 105px;">
              <label class="ml-5">เลือกราคาที่ต้องการ : </label>
              <br>
              <label class="ml-5">
                <input type="radio" name="pointoption" value="65"> 50 บาท | 
