<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Ogani Template">
    <meta name="keywords" content="Ogani, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>รายละเอียดโปรโมชัน : <%= namePromotion %></title>

    <link rel="icon" href="../stylesheetsUsers/img/logotitle-removebg-preview.png">

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Thai:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">        

    <!-- Css Styles -->
    <link rel="stylesheet" type="text/css" href="../stylesheetsUsers/stylesheet/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="../stylesheetsUsers/stylesheet/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="../stylesheetsUsers/stylesheet/elegant-icons.css">
    <link rel="stylesheet" type="text/css" href="../stylesheetsUsers/stylesheet/nice-select.css">
    <link rel="stylesheet" type="text/css" href="../stylesheetsUsers/stylesheet/jquery-ui.min.css">
    <link rel="stylesheet" type="text/css" href="../stylesheetsUsers/stylesheet/owl.carousel.min.css">
    <link rel="stylesheet" type="text/css" href="../stylesheetsUsers/stylesheet/slicknav.min.css">
    <link rel="stylesheet" type="text/css" href="../stylesheetsUsers/stylesheet/style.css">
</head>

<body>
  <% if(messages.error) {%>
    <div role="alert"><%= messages.error%></div>
  <% } %>
  
  <% if(messages.message) { %>
    <div role="alert"><%= messages.message%></div>
  <% } %>
  <% if(messages.success) { %>
    <div role="alert"><%= messages.success%></div>
  <% } %>

  <div id="navbar-guest">
    <%- include('./Navbar/navbar-detail') %>
  </div>

    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg" data-setbg="/uploads/resturantimg/<%=picPromotion%>"
    style="box-shadow: 0px 4px 9px 4px rgba(0, 0, 0, 0.25);">
      <div class="container">
          <div class="row">
              <div class="col-lg-12 text-center">
                  <div class="breadcrumb__text">
                      <h2><%= namePromotion %></h2>
                      <div class="breadcrumb__option">
                          <a href="/">สะดวกจอง</a>
                          <a href="/coupon-list">คูปอง</a>
                          <span><%= namePromotion %></span>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </section>
  <!-- Breadcrumb Section End -->

    <!-- Product Details Section Begin -->
    <section class="product-details spad">
        <div class="container">
          
            <!-- Card 1 -->
            
            <div class="row">

                <div class="col-lg-6 col-md-6">
                    <div class="product__details__pic">
                      <% if ( picPromotion === 'NULL') {%>
                        <center><img src="../images/profileNon.png" alt="NOimg"  style="height: 300px; width: 300px; "></center>
                      <%}else{%>
                        <center><img src="/uploads/resturantimg/<%= picPromotion %> " 
                          alt="img" 
                          style="height: 450px; width: 100%; border-radius: 20px; box-shadow: 6px -4px 5px 3px rgba(0, 0, 0, 0.20);"></center>
                      <% } %>
                    </div>
                </div>
                
                <div class="col-lg-6 col-md-6">
                    <div class="product__details__text">
                        <h3><%= namePromotion %></h3>
                        <div class="product__details__price">จำนวน : <%= pricePromotion %> แต้ม </div>
                        <span class="heart-icon icon_heart_alt"></span>
                        <ul style="padding-top: 10px; display: block;">
                          <table>
                            <tr>
                              <td><b>รหัสโปรโมชัน :</b> <%= idPromotion %> </td>
                              <td><b>เวลาเริ่ม : </b> <%= timeStart %></td>
                            </tr>
                            <tr>
                              <td><b>วันเริ่ม :</b> <%= new Intl.DateTimeFormat('th-TH', { year: 'numeric', month: 'long', day: '2-digit'}).format(dayStart)%></td>
                              <td><b>วันที่หมดอายุ :</b> <%= new Intl.DateTimeFormat('th-TH', { year: 'numeric', month: 'long', day: '2-digit'}).format(dayEnd)%></td>
                            </tr>
                            <tr>
                              <td><b>เบอร์โทรร้านอาหาร : </b><%=resPhone%> </td>
                            </tr>
                            <tr>
                              <td colspan="2"><b>รายละเอียดโปรโมชัน</b><br><%=detail%></td>
                            </tr>
                           </table>
                        </ul>
                    </div>
                </div>
            </div>
                <% if(!dataCoupon.length) { %>
                  <p class="text-center"style="color: black;">ไม่พบคูปอง !</p>
              <% } %>
        </div>
            
    </section>
    
    <!-- Product Details Section End -->

    <!-- Related Product Section Begin -->
    <section class="related-product">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="product__details__tab" style="padding-top: 0; margin-bottom: 40px;">
                        <ul class="nav nav-tabs" role="tablist">
                            <li class="nav-item">
                              <b><h4>ตำแหน่งที่ตั้งร้าน</h4></b>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- Map Begin -->
            <div class="map mb-5">
              <p><%-address%></p>
            </div>
            <!-- Map End -->
            
        </div>
        <hr>
    </section>
    <!-- Related Product Section End -->
    

    <!-- Related Product Section Begin -->
    <section class="related-product">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title related__product__title">
                        <h3>คูปองที่ที่มีอยู่</h3>
                    </div>
                </div>
            </div>
            <div class="row">
              <% if(dataCoupon.length) { %>
        
                <!-- Card 1 -->
              <% for(let i = 0; i < dataCoupon.length; i++) { %>
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="product__item">
                        <div class="product__item__pic">
                          <% if ( dataCoupon[i].img_pro === 'NULL') {%>
                            <center><img src="../images/profileNon.png" alt="NOimg"  style="height: 300px; width: 300px; "></center>
                          <%}else{%>
                            <center><img src="/uploads/resturantimg/<%= dataCoupon[i].img_pro %> " 
                              alt="img" 
                              style="
                                     width: 100%;
                                     height: 200px;
                                     border-radius: 20px; 
                                     background-position: center;
                                     background-repeat: no-repeat;
                                     background-size: contain;"></center>
                          <% } %>
                        </div>
                        <div class="product__item__text">
                          <h6><a href="/FormLogin" class="text-primary">จองคูปอง</a></h6>
                            <h5>จำนวน : <%= dataCoupon[i].price_pro.toLocaleString('en-US') %> แต้ม</h5>
                        </div>
                    </div>
                </div>
                <% } %>
        <% } %>
        <% if(!dataCoupon.length) { %>
            <p class="text-center">No Coupon found!</p>
        <% } %>
            </div>
        </div>
    </section>
    <!-- Related Product Section End -->
    

<!-- Footer Start -->
<%- include('./footer') %>
<!-- Footer End -->

<!-- Js Plugins -->
<script src="../stylesheetsUsers/js/jquery-3.3.1.min.js"></script>
<script src="../stylesheetsUsers/js/bootstrap.min.js"></script>
<script src="../stylesheetsUsers/js/jquery.nice-select.min.js"></script>
<script src="../stylesheetsUsers/js/jquery-ui.min.js"></script>
<script src="../stylesheetsUsers/js/jquery.slicknav.js"></script>
<script src="../stylesheetsUsers/js/mixitup.min.js"></script>
<script src="../stylesheetsUsers/js/main.js"></script>


</body>

</html>